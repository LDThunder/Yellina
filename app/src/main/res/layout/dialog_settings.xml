<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainConstraint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/otvetitUsa"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="345dp"
        android:backgroundTint="#9CCC65"
        android:fontFamily="@font/montregular"
        android:text="Применить"
        android:textColor="#F9FFF6"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#53E85A" />

    <androidx.cardview.widget.CardView
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:layout_marginBottom="360dp"
        app:cardBackgroundColor="#F8FFF5"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="7dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/settings"
            app:lottie_speed="0.2" />

        <TextView
            android:id="@+id/textCountry"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/montregular"
            android:gravity="center"
            android:padding="10dp"
            android:text="Настройки"
            android:textColor="#424442"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintBase"
        android:layout_width="350dp"
        android:layout_height="460dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintCountry"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginTop="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textMusic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/montregular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Музыка"
                        android:textColor="#3F403F"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textZvuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montregular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Звуки нажатия"
                        android:textColor="#3F403F"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textMusic" />

                    <TextView
                        android:id="@+id/textThird"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montregular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Монеты x3"
                        android:textColor="#3F403F"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textZvuk" />

                    <TextView
                        android:id="@+id/textFour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montregular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Сливать записи с камеры"
                        android:textColor="#3F403F"
                        android:textSize="6sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textThird" />

                    <TextView
                        android:id="@+id/textFive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montregular"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Собирать личные данные "
                        android:textColor="#3F403F"
                        android:textSize="4sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textFour" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottie5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textFive"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textFive"
                        app:lottie_rawRes="@raw/checkbox"
                        app:lottie_speed="3" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottie4"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="26dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textFour"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textFour"
                        app:lottie_rawRes="@raw/checkbox"
                        app:lottie_speed="3" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottie3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textThird"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textThird"
                        app:lottie_rawRes="@raw/checkbox"
                        app:lottie_speed="3" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottie2"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        app:layout_constraintBottom_toBottomOf="@+id/textZvuk"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textZvuk"
                        app:layout_constraintVertical_bias="0.444"
                        app:lottie_rawRes="@raw/switchsetting"
                        app:lottie_speed="2.3" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottie1"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        app:layout_constraintBottom_toBottomOf="@+id/textMusic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textMusic"
                        app:layout_constraintVertical_bias="0.416"
                        app:lottie_rawRes="@raw/switchsetting"
                        app:lottie_speed="2.3" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>