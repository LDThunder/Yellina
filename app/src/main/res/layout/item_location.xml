<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/locationCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="6dp"
        app:cardBackgroundColor="#C7A7CC"
        app:cardCornerRadius="18dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/igLocationBig"
                android:layout_width="0dp"
                android:layout_height="167dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CornerSize18dp"
                app:srcCompat="@drawable/mbabane" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shadowLocation"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:background="@drawable/shadow_gradient"
                android:rotationX="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:shapeAppearanceOverlay="@style/CornerSize18dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shadowLocationSecond"
                android:layout_width="0dp"
                android:layout_height="78dp"
                android:background="@drawable/shadow_gradient"
                android:rotationX="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:shapeAppearanceOverlay="@style/CornerSize18dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shadowLocationThird"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@drawable/shadow_gradient"
                android:rotationX="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:shapeAppearanceOverlay="@style/CornerSize18dp" />

            <ImageView
                android:id="@+id/igLocationSmall"
                android:layout_width="58dp"
                android:layout_height="56dp"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="104dp"
                android:background="@android:color/transparent"
                android:contentDescription="Country"
                android:rotation="0"
                android:rotationY="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/africarec" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="116dp"
                android:fontFamily="@font/montlight"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:text="Country"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textSize="26sp"
                app:layout_constraintStart_toEndOf="@+id/igLocationSmall"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>