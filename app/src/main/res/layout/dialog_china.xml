<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainConstraintChina"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/superChinaCV"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="530dp"
        android:visibility="visible"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/chinaDialogFlag"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/chinaflagwave"
            app:lottie_speed="0.8" />

        <TextView
            android:id="@+id/textCountryChina"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginStart="36dp"
            android:fontFamily="@font/montregular"
            android:gravity="center"
            android:padding="10dp"
            android:text="Китай"
            android:textColor="#C20707"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintBaseChina"
        android:layout_width="350dp"
        android:layout_height="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="520dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintAllChina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintCountryChina"
                    android:layout_width="match_parent"
                    android:layout_height="520dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/variant2China"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#D63737"
                        android:fontFamily="@font/montregular"
                        android:text="Вар 2"
                        android:textColor="#F9FFF6"
                        android:visibility="gone"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/variant4China"
                        app:layout_constraintEnd_toEndOf="@+id/variant4China"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/variant4China"
                        app:strokeColor="#FFFFFF" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/variant1China"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#D63737"
                        android:fontFamily="@font/montregular"
                        android:text="Вар 1"
                        android:textColor="#F9FFF6"
                        android:visibility="gone"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/variant3China"
                        app:layout_constraintEnd_toEndOf="@+id/variant3China"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/variant3China"
                        app:strokeColor="#FFFFFF" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/variant4China"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="18dp"
                        android:backgroundTint="#D63737"
                        android:fontFamily="@font/montregular"
                        android:text="Вар 4"
                        android:textColor="#F9FFF6"
                        android:visibility="gone"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/otvetitChina"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.957"
                        app:layout_constraintStart_toStartOf="parent"
                        app:strokeColor="#FFFFFF" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/variant3China"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="18dp"
                        android:backgroundTint="#D63737"
                        android:fontFamily="@font/montregular"
                        android:text="Вар 3"
                        android:textColor="#F9FFF6"
                        android:visibility="gone"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/otvetitChina"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.02"
                        app:layout_constraintStart_toStartOf="parent"
                        app:strokeColor="#FFFFFF" />

                    <View
                        android:id="@+id/viewLineDialogCountryChina"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_marginStart="86dp"
                        android:layout_marginTop="250dp"
                        android:layout_marginEnd="86dp"
                        android:background="@drawable/line"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieAnimationViewChina"
                        android:layout_width="233dp"
                        android:layout_height="205dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.506"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/chinaflag"
                        app:lottie_speed="0.8" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/otvetitChina"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="144dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#74D637"
                        android:fontFamily="@font/montregular"
                        android:text="Начать"
                        android:textColor="#F9FFF6"
                        app:cornerRadius="102dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:strokeColor="#53E85A" />

                    <TextView
                        android:id="@+id/tvVoprosChina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/montregular"
                        android:text="Внимание"
                        android:textColor="#C20707"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/viewLineDialogCountryChina"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationViewChina" />

                    <TextView
                        android:id="@+id/voprosChina"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/montregular"
                        android:text="@string/Виза_китай"
                        android:textAlignment="center"
                        android:textColor="#3E3D3D"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewLineDialogCountryChina" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>